<Page x:Class="Modem.Geo.VideoRelayerDesktop.ProcessInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Modem.Geo.VideoRelayerDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProcessInfoPage"
      ShowsNavigationUI="False">

    <Grid>
        <StackPanel>
            <Label Content="" Name="cameraNameLabel" FontSize="20"></Label>
            <StackPanel Orientation="Horizontal">
                <Label Content="Статус камеры:" Name="CameraPingLabel" Visibility="Hidden"></Label>
                <Label Name="CameraPing" Visibility="Hidden"></Label>
            </StackPanel>
            <Button Name="Launch" Content="Запуск камеры" Click="ButtonClick" Visibility="Hidden"></Button>
            <Button Name="Stop" Content="Остановить камеру" Click="Stop_Click" Visibility="Hidden"></Button>
            <Label Name="CameraStatus" Content="Камера остановлена" Visibility="Hidden" Foreground="Red"></Label>
        </StackPanel>
    </Grid>
</Page>
