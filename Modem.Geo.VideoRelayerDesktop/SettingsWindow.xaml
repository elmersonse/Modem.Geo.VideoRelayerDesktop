<Window x:Class="Modem.Geo.VideoRelayerDesktop.SettingsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Modem.Geo.VideoRelayerDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <StackPanel>
            <Label Content="Путь к файлам .bat"></Label>
            <TextBox Name="BatPath"></TextBox>
            <Button Name="SavePath" Content="Сохранить" Click="SavePath_Click"></Button>
            <Label Content="Адрес списка камер"></Label>
            <TextBox Name="Api"></TextBox>
            <Button Name="SaveApi" Content="Сохранить" Click="SaveApi_Click"></Button>
            <Label Content="Логин на портале"></Label>
            <TextBox Name="PortalLogin"></TextBox>
            <Button Name="SaveLogin" Content="Сохранить" Click="SaveLogin_Click"></Button>
            <Label Content="Пароль на портале"></Label>
            <TextBox Name="PortalPassword"></TextBox>
            <Button Name="SavePassword" Content="Сохранить" Click="SavePassword_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
